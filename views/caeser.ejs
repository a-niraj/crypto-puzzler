<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Caeser Cipher</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <%- include("partials/header.ejs") %>
  </head>
  <body>
    <table border="0" align="center">
      <form action="/register" method="POST">
        <tr align="center">
          <td>
            <label for="user_input" class="input">
              Enter your plaintext here
            </label>
            <br />
          </td>
        </tr>
        <tr align="center">
          <td><textarea name="user_text" cols="150" rows="10"></textarea></td>
        </tr>

        <tr>
          <td align="center">
            <label for="num" class="num"> Shift Amount:</label>
            <input name="num" type="number" min="0" max="25" />
            &nbsp;
            <input type="submit" value="Encrypt" />
          </td>
        </tr>
        <tr>
          <td><br /></td>
        </tr>
        <tr>
          <td><br /></td>
        </tr>
      </form>

      <% if (locals.out) { %>
      <tr>
        <td><h2 class="res">Ciphertext</h2></td>
      </tr>
      <tr align="center">
        <td>
          <%= out %>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
  <footer><%- include("partials/footer.ejs") %></footer>
</html>
