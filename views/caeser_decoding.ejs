<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Caeser Cipher</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <%- include("partials/header.ejs") %>
  </head>
  <body>
    <table border="0" align="center">
      <form action="/caeser_decode" method="POST">
        <tr align="center">
          <td>
            <label for="input" class="input">
              Enter your ciphertext here
            </label>
          </td>
        </tr>
        <tr align="center">
          <td><textarea name="user_text" cols="150" rows="10"></textarea></td>
        </tr>
        <tr align="center">
          <td><input type="submit" value="Decrypt" /></td>
        </tr>
      </form>

      <tr>
        <td><br /></td>
      </tr>
      <tr>
        <td><br /></td>
      </tr>

      <tr align="center">
        <td>
          <% if (locals.out) { %>

          <table style="border: 1px dotted black" width="15%">
            <th style="border:1px dotted black">Shift</th>
            <th style="border:1px dotted black">Plaintext</th>

            <%for(var i=0; i< out.length; i++) { %>
            <tr>
              <td style="border:1px dotted black"><%= i+1 %></td>
              <td style="border:1px dotted black"><%= out[i]%></td>
            </tr>
            <% } %>
          </table>
          <%} %>
        </td>
      </tr>
    </table>
  </body>
  <footer><%- include("partials/footer.ejs") %></footer>
</html>
